{
  "name": "@rubixreactnative/react-native-social-banner",
  "version": "1.0.0",
  "description": "A comprehensive React Native social media sharing library for generating and sharing beautiful content banners",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "react-native",
    "social-media",
    "sharing",
    "banner",
    "expo",
    "react"
  ],
  "author": "OnePage Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/onepage/social-media-share.git"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0",
    "expo": ">=48.0.0"
  },
  "dependencies": {
    "expo-sharing": "~14.0.7",
    "expo-linear-gradient": "~15.0.7",
    "expo-blur": "~15.0.7",
    "react-native-view-shot": "^4.0.3",
    "@expo/vector-icons": "^15.0.2"
  },
  "devDependencies": {
    "@types/react": "~19.1.10",
    "@types/react-native": "^0.73.0",
    "typescript": "~5.9.2",
    "rollup": "^3.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "jest": "^29.0.0",
    "@testing-library/react-native": "^12.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles.esm.js",
      "require": "./dist/styles.js",
      "types": "./dist/styles.d.ts"
    }
  }
}